@using IdpServer.Controllers.Account;
@model RegisterViewModel


<div class="login-page">

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Register</h3>
                </div>
                <div class="panel-body">
                    <form asp-route="Register">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="FirstName"></label>
                                <input class="form-control" placeholder="FirstName" asp-for="FirstName" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName"></label>
                                <input class="form-control" placeholder="LastName" asp-for="LastName">
                            </div>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input type="email" class="form-control" placeholder="Email" asp-for="Email">
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary" name="button" value="login">Register</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>