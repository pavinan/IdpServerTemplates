@using IdentityServer4.Extensions

@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="~/dist/vendor.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/dist/styles.min.css" asp-append-version="true"/>

    <title>IdpServer</title>
</head>
<body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
        <h5 class="my-0 mr-md-auto font-weight-normal">IdpServer</h5>
        <nav class="my-2 my-md-0 mr-md-3">            
        </nav>
        @if (!string.IsNullOrWhiteSpace(name))
        {
            <ul>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">@name <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a asp-action="Logout" asp-controller="Account">Logout</a></li>
                    </ul>
                </li>
            </ul>
        }
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    <script type="text/javascript" src="~/dist/vendor.js" asp-append-version="true"></script>
</body>
</html>